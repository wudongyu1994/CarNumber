<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/numberKey_preview"
        style="@style/textview_allgrade_content"
        android:layout_width="0dp"
        android:layout_height="32dp"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="1dp"
        android:text="1"
        app:layout_constraintBottom_toBottomOf="@+id/projectKey_preview"
        app:layout_constraintEnd_toStartOf="@+id/projectKey_preview"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/projectKey_preview" />

    <TextView
        android:id="@+id/projectKey_preview"
        style="@style/textview_allgrade_content"
        android:layout_width="0dp"
        android:layout_height="32dp"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="1dp"
        android:text="GTX's charm"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/corporationKey_preview"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_weight="6"
        app:layout_constraintStart_toEndOf="@+id/numberKey_preview"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/corporationKey_preview"
        style="@style/textview_allgrade_content"
        android:layout_width="0dp"
        android:layout_height="32dp"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="1dp"
        android:text="ZJU"
        app:layout_constraintBottom_toBottomOf="@+id/projectKey_preview"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_weight="3"
        app:layout_constraintStart_toEndOf="@+id/projectKey_preview"
        app:layout_constraintTop_toTopOf="@+id/projectKey_preview" />

</android.support.constraint.ConstraintLayout>
